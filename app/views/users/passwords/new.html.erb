<style>
.password-reset-form {
  max-width: 400px;
  margin: 0 auto;
  padding: 20px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.password-reset-form h2 {
  text-align: center;
  color: #333;
  margin-bottom: 20px;
}

.password-reset-form .field {
  margin-bottom: 15px;
}

.password-reset-form .field label {
  display: block;
  font-weight: bold;
  margin-bottom: 5px;
}

.password-reset-form .field input[type="email"] {
  width: 100%;
  padding: 10px;
  border-radius: 4px;
  border: 1px solid #ddd;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.password-reset-form .field input[type="email"]:focus {
  border-color: #ffa500;
  box-shadow: 0px 0px 5px rgba(255, 165, 0, 0.5);
}

.password-reset-form .actions {
  text-align: center;
  margin-top: 20px;
}

.password-reset-form .actions input[type="submit"] {
  background-color: #ffa500;
  border: none;
  color: #fff;
  padding: 10px 20px;
  font-size: 16px;
  font-weight: bold;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.password-reset-form .actions input[type="submit"]:hover {
  background-color: #ff8c00;
}
</style>

<h2 class="text-center">Esqueceu sua senha?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'password-reset-form' }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "users/shared/links" %>