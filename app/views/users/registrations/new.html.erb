<style>
/* Estilização do formulário */
.form-horizontal {
  background-color: #f9f9f9;
  padding: 30px;
  border-radius: 15px;
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
  max-width: 700px;
  margin: 30px auto;
  font-family: 'Arial', sans-serif;
}

.form-horizontal .form-group {
  margin-bottom: 25px;
}

.form-horizontal .control-label {
  font-weight: bold;
  color: #333;
}

.form-horizontal .form-control {
  border-radius: 8px;
  border: 1px solid #bbb;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-horizontal .form-control:focus {
  border-color: #28a745;
  box-shadow: 0px 0px 10px rgba(40, 167, 69, 0.5);
}

.form-horizontal em {
  color: #555;
  font-size: 0.9em;
}

.form-horizontal .btn-primary {
  background-color: #28a745;
  border-color: #28a745;
  color: #fff;
  padding: 15px 30px;
  border-radius: 8px;
  transition: background-color 0.3s ease, border-color 0.3s ease;
}

.form-horizontal .btn-primary:hover {
  background-color: #218838;
  border-color: #1e7e34;
}

.form-horizontal .col-sm-offset-2 .btn-primary {
  margin-top: 20px;
}

/* Responsividade */
@media (max-width: 576px) {
  .form-horizontal {
    padding: 25px;
  }

  .form-horizontal .control-label {
    text-align: left;
  }

  .form-horizontal .col-sm-2,
  .form-horizontal .col-sm-10 {
    width: 100%;
    display: block;
    padding: 0;
  }
}
.links {
  text-align: center;
  margin-top: 20px;
}

.links a {
  color: #28a745;
  text-decoration: none;
  font-weight: bold;
  transition: color 0.3s ease;
}

.links a:hover {
  color: #218838;
}

</style>
<h2 class="text-center">Inscrever-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit "Finalizar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="links">
  <%= render "users/shared/links" %>
</div>